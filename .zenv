#!/bin/bash

export PATH=$HOME/bin:$PATH

alias proxy='. proxy.sh'


# load local zenv file if exists
zenvlocal="$HOME/.zenv-local"
if [ -f "$zenvlocal" ]; then
	    source "$zenvlocal"
fi


if command -v kubectl &> /dev/null
then
    source <(kubectl completion zsh)
fi

if command -v kubebuilder &> /dev/null
then
	source <(kubebuilder completion zsh)
fi

kubeconfig_setup="$HOME/.kube/setup.sh"

if [ -f "$kubeconfig_setup" ]; then
	source "$kubeconfig_setup"
fi

if [ -d "$HOME/.local/bin" ]; then
	export PATH=$PATH:$HOME/.local/bin
fi

if [ -d "$HOME/.zenv.d" ]; then
	for f in $HOME/.zenv.d/*.sh; do
		source $f
	done
fi
